FROM rust

RUN apt-get update \
    && curl -fsSL https://deb.nodesource.com/setup_19.x | bash - \
    && apt-get install -y \
    libwebkit2gtk-4.0-dev \
    build-essential \
    libssl-dev \
    libgtk-3-dev \
    libayatana-appindicator3-dev \
    librsvg2-dev \
    nodejs \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build
